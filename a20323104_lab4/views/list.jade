extend layout

block content
  h1 These are the available dolls:
  table.table
    thead
      tr
        th NAME
        th HAIR COLOR
        th EYE COLOR
        th CLOTHES
    tbody
        each doll in dolls
          tr
            br
            td
              a(href="/dolls/#{doll.id}") #{doll.name}
            td #{doll.hair}
            td #{doll.eyes}
            td #{doll.clothes}